<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/PRISMA</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.current_session_context_class">thread</property>      
		<property name="show_sql">true</property>
		<mapping class="mx.prisma.editor.model.Actor" />
		<mapping class="mx.prisma.editor.model.Cardinalidad" />
		<mapping class="mx.prisma.editor.model.Elemento" />
		<mapping class="mx.prisma.editor.model.ElementoId" />
		<mapping class="mx.prisma.editor.model.EstadoElemento" />
		
		<mapping class="mx.prisma.admin.model.Colaborador" />
		<mapping class="mx.prisma.admin.model.EstadoProyecto" />	
		<mapping class="mx.prisma.admin.model.Proyecto" />
		<mapping class="mx.prisma.admin.model.Telefono" />
		
		
	
    </session-factory>
</hibernate-configuration>
